# Need to package the code first `tar zcf fs.tar.gz $(ls)` and move it to the same directory as Dokerfile

# Compile the go code, you can specify the golang version
FROM golang:1.23-alpine as build
COPY . /go/src/fs
WORKDIR /go/src/fs
RUN tar zxf fs.tar.gz
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /fs cmd/fs/main.go

# compressing binary files
#cd /
#upx -9 fs


# building images with binary
FROM alpine:latest
MAINTAINER zhufuyi "g.zhufuyi@gmail.com"

# add curl, used for http service checking, can be installed without it if deployed in k8s
RUN apk add curl

COPY --from=build /fs /app/fs
COPY --from=build /go/src/fs/configs/fs.yml /app/configs/fs.yml

# http port
EXPOSE 8080


WORKDIR /app

CMD ["./fs", "-c", "configs/fs.yml"]
# if you use the Configuration Center, fs.yml is changed to the Configuration Center configuration.
#CMD ["./fs", "-c", "configs/fs.yml", "-enable-cc"]
